.wrapper
  .search
    = image_tag "blueridge.png", :class => "logo"

    %table{:id => "blueridge", :class => "display", :cellspacing => "0", :width => "100%"}
      %thead
        %tr
          %th{:class => "listing"} Thread
          %th{:class => "replies"} Replies
          %th{:class => "views"} Views
          %th{:class => "last-post"} Last Post
      %tbody
        - cache(cache_key_for_blueridge) do
          = render @blueridges
  .push
