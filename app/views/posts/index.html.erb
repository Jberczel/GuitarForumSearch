<h1>acoustic guitar forum</h1>

<table id="guitar" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Thread</th>
      <th>Last Post</th>
      <th>Replies</th>
      <th>Views</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td>
          <a href="http://www.acousticguitarforum.com/forums/<%= p.link %>" target="_blank">
            <%= p.title %>
          </a>
          <br>
            <%= p.author%>
        </td>
        <td><%= p.last_post %></td>
        <td><%= p.replies %></td>
        <td><%= p.views %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>
